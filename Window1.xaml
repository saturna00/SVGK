                        <TextBlock Text="{Binding Номер_карты}"/>
                        <TextBlock Text=" ; "/>
                        <TextBlock Text="{Binding Серия_Номер_паспорта}"/>
                        <TextBlock Text=" ; "/>
                        <TextBlock Text="{Binding Трудоустройство}"/>
