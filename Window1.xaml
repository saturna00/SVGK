        <ListView x:Name="dbplz" HorizontalAlignment="Left" Height="345" Margin="52,10,0,0" VerticalAlignment="Top" Width="568">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="{Binding Фио}"/>
